@using Web_Test_II.Models.ViewModels
@model DeleteAnswersViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Web_Test_II
@{  
ViewBag.Title = "Удаление ответов к вопросу";
var id = ViewBag.id;
}

<div class="text-center">
   
   
        <h2 class="display-4">Удаление ответов к вопросу</h2>     

        <h1 class="display-4">@Html.DisplayNameFor(m => m.Answers)</h1>
        <a asp-action="AddAnswers" asp-controller="Home" asp-route-id="@id">Добавить ответы</a>
        <div class="row">
            <div class="col-3">
                
            </div>
            <div class="col-9">                
                <table class="table">
                    <tr>
                        <th><a>Ответ</a></th>
                        <th><a>Правильность</a></th>
                        <th><a>Удаление</a></th>
                    </tr>
                   
                    @foreach(var item in Model.Answers)
                    {    
                         <tr>
                        <td>   
                            @item.Name
                        </td>
                        <td>   
                            @if (@item.IsAnswer == true)
                            {
                                <p>Правильно</p>
                            }
                            else
                            {
                                <p>Не правильно</p>
                            }
                        </td>  
                        <td>
                            <form asp-controller="Home" asp-action="DeleteAnswer" method="post"  asp-route-id="@item.Id">
                    <input type="submit" value="Удалить" class="form-control" />
                            </form>
                        </td>
                        </tr>
                    }                    
                        </table>
            </div>           
        </div>
</div>

