@using Web_Test_II_DAL.Entityes;
@using Web_Test_II.Models.ViewModels.TestingViewModel;
@model AvailableTestsViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Web_Test_II

@{
    int num = 0;
    ViewBag.Title = "Просмотр активных тестов тестов";
     
    
}

<div class="text-center">

        <h2 class="display-4">Просмотр тестов</h2>  

        <table class="table">
            <tr>
                 <th>
                    <a>Номер</a>
                </th>
                <th>
                    <a>Тест</a>
                </th>
                <th>
                    <a>Количество вопросов</a>
                </th>
                <th>
                    <a>Пройти тест</a>
                </th>
            </tr>
            
            @for(int i = 0; i<Model.Tests.Count();i++)
            {
                num++;
                <tr>
                    <td>
                        @num
                    </td>                     
                    <td>
                       <p>@Model.Tests[i].Name</p>
                    </td>              
                    <td>
                        @Model.CountQuest[i]
                    </td>               
                    <td>
                        <a asp-controller="Testing" asp-action="OpenTest" asp-route-id="@Model.Tests[i].Id">Пройти тест</a>
                    </td>
                </tr>           
        }
        </table>
        

    
</div>