@using Web_Test_II_DAL.Entityes;
@using Web_Test_II.Models.ViewModels.DataOperationsViewModels;
@model MentorsViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Web_Test_II

@{
    int num = 0;
    ViewBag.Title = "Просмотр менторов";
     
    
}

<div class="text-center">

        <h2 class="display-4">Преподаватели</h2>  
  
        <table class="table">
            <tr>
                 <th>
                    <a>Номер</a>
                </th>
                <th>
                    <a>Преподаватель</a>
                </th>
                <th>
                    <a>Должность</a>
                </th>
                <th>
                    <a>Логин</a>
                </th>
            </tr>
            
            @foreach(var mentor in Model.Mentors)
            {
                num++;
                <tr>
                    <td>
                        @num
                    </td>  
                     <td>
                        @mentor.Surname @mentor.Name @mentor.Patronymic
                    </td>  
                    <td>
                        @mentor.Position.Name
                    </td>  
                    <td>
                        @mentor.User?.Email
                    </td>  
                    <td>
                        <form asp-controller="DataOperations" asp-action="DeleteMentor" method="post"  asp-route-id="@mentor.Id">
                            <input type="submit" value="Удалить" class="form-control" />
                            </form>
                    </td>
                </tr>           
        }
        </table>
        

    
</div>