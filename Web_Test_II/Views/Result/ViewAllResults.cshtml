@using Web_Test_II_DAL.Entityes;
@using Web_Test_II.Models.ViewModels.ResultViewModel;
@using Web_Test_II.Controllers;
@model ResultStudentViewModel
@{
    ViewBag.Title = "Просмотр всех результатов";
    int num = 0;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Web_Test_II

@{
    ViewBag.Title = "Просмотр всех результатов";
}

<div class="text-center">

        <h2 class="display-4">Просмотр результатов теста</h2>  
        <table class="table">
            <tr>
                <th>
                    <a>Номер</a>
                </th>
                <th>
                    <a>Студент</a>
                </th>
                <th>
                    <a>Группа</a>
                </th>
                <th>
                    <a>Тест</a>
                </th>
                <th>
                    <a>Количество баллов</a>
                </th> 
        </tr>
            @foreach(var result in Model.Results)
            {
            num++;
            <tr>
                    <td>
                     @num   
                    </td>
                    <td>                       
                      @result.Student.Surname @result.Student.Name @result.Student.Patronymic 
                     </td>
                      <td>                       
                      @result.Student.Group.Name
                     </td>
                    <td>                       
                      @result.Test.Name 
                     </td>
                    <td>
                      @result.Points/@result.Test.Questions.Count
                    </td>
                </tr>           
        }
        </table>
        

    
</div>
