@using Web_Test_II.Models.ViewModels.UserViewModels
@model RegisterStudentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewBag.Title = "Регистрация";


}
<div class="divlogin">

@using(Html.BeginForm())
{
    <form asp-action="RegisterStudent" asp-controller="Account" asp-anti-forgery="true">
        <p>
           <label asp-for="Email"></label><br/>
           <input type="text" asp-for="Email"/>
           <span asp-validation-for="Email"/>
        </p>
        <p>
           <label asp-for="Password"></label><br/>
           <input type="password" asp-for="Password"/>
           <span asp-validation-for="Password"/>
        </p>
        <p>
           <label asp-for="ConfirmPassword"></label><br/>
           <input type="password" asp-for="ConfirmPassword"/>
           <span asp-validation-for="ConfirmPassword"/>
        </p>
        <p>
           <label asp-for="Surname"></label><br/>
           <input type="text" asp-for="Surname"/>
           <span asp-validation-for="Surname"/>
        </p>
        <p>
           <label asp-for="Name"></label><br/>
           <input type="text" asp-for="Name"/>
           <span asp-validation-for="Name"/>
        </p>
        <p>
           <label asp-for="Patronymic"></label><br/>
           <input type="text" asp-for="Patronymic"/>
           <span asp-validation-for="Patronymic"/>
        </p>
        <p>
           <label asp-for="Group.Id"></label><br/>
           @Html.DropDownListFor(model => model.Group.Id, ViewBag.Groups as SelectList, "Выбрать группу")<br/>
           <span asp-validation-for="Group"/>
        </p>
        <p>
            <input type="submit" value="Зарегистрировать студента" class="btn btn-outline-dark" />
        </p>
    </form>

}
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
